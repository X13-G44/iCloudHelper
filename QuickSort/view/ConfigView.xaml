<Window x:Class="QuickSort.view.ConfigView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickSort.view"
        xmlns:validate_rules="clr-namespace:QuickSort.validationrules"
        xmlns:help="clr-namespace:QuickSort.help"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        mc:Ignorable="d"
        Title="iCloudHelper - Einstellungen"
        Height="450" 
        Width="650" 
        Icon="/icloud-logo-49272-Windows.ico" 
        ResizeMode="CanMinimize">

    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <sys:Boolean x:Key="HasValidationRuleError">false</sys:Boolean>

        <!--Headline Styles-->

        <Style TargetType="Label" x:Key="HeadLine">
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="FontWeight" Value="Normal"/>-->
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
        </Style>

        <!--Text Styles-->

        <Style TargetType="Label">
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="FontWeight" Value="Normal"/>-->
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0"/>
        </Style>

        <Style TargetType="TextBlock">
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="FontWeight" Value="Normal"/>-->
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="15,2"/>
        </Style>

        <!--TextBox Styles-->

        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
            <!--<Setter Property="BorderThickness" Value="1"/>-->
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="FontWeight" Value="Normal"/>-->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>

            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0"
                                    Grid.Column="0"
                                    BorderBrush="Red" 
                                    BorderThickness="2">
                                <AdornedElementPlaceholder x:Name="placeholder"/>
                            </Border>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="Red"
                                       Margin="0,2,0,0"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Top"
                                       FontWeight="DemiBold"
                                       Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopTextBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
            <!--<Setter Property="BorderThickness" Value="1"/>-->
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="FontWeight" Value="Normal"/>-->
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>

            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>                            

                            <Border Grid.Row="0"
                                    Grid.Column="0"
                                    BorderBrush="Red" 
                                    BorderThickness="2">
                                <AdornedElementPlaceholder x:Name="placeholder"/>
                            </Border>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="Red"
                                       Margin="0,2,0,0"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Top"
                                       FontWeight="DemiBold"
                                       Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Checkbox Styles-->

        <Style TargetType="CheckBox">
            <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
            <!--<Setter Property="BorderThickness" Value="1"/>-->
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="FontWeight" Value="Normal"/>-->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

        <Style x:Key="TopCheckBox" TargetType="CheckBox">
            <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
            <!--<Setter Property="BorderThickness" Value="1"/>-->
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="FontWeight" Value="Normal"/>-->
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

        <!--Button Styles-->

        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="Foreground" Value="#FF3C3C3C"/>
            <!--<Setter Property="FontSize" Value="14"/>-->
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Height" Value="25"/>
        </Style>

    </Window.Resources>

    <Grid>

        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Style="{StaticResource HeadLine}"
                   Content="Allgemeine Ordner-Einstellungen"/>

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Content="Start-Verzeichnis"/>
            <TextBox Grid.Row="1"
                     Grid.Column="2"                    
                     Name="STARTPATH_TEXTBOX">
                <TextBox.Text>
                    <Binding Path="StartPath" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='C:\'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckPathExistsValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Grid.Row="1"
                    Grid.Column="4"
                    HorizontalAlignment="Left"
                    Content="Durchsuchen..."
                    Command="{Binding Path=Cmd_BrowseStartFolder}"/>

            <Label Grid.Row="2" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Style="{StaticResource HeadLine}"
                   Content="Sonstige-Einstellungen"/>

            <Label Grid.Row="3"
                   Grid.Column="0"
                   Content="Verschiebebestätigung"/>
            <CheckBox Grid.Row="3"
                      Grid.Column="2"
                      IsChecked="{Binding ShowMoveDlg, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="4"
                   Grid.Column="0"
                   Content="Bild-Dateinamen anzeigen"/>
            <CheckBox Grid.Row="4"
                      Grid.Column="2"
                      IsChecked="{Binding ShowImgFileName, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="5"
                   Grid.Column="0"
                   Content="Benutze DarkMode Theme"/>
            <CheckBox Grid.Row="5"
                      Grid.Column="2"
                      IsChecked="{Binding UseDarkModeColorTheme, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   MaxWidth="200">                    
                    <Run Text="Einträge automatisch der"/>                    
                    <LineBreak/>                    
                    <Run Text="Favoritenliste hinzufügen"/>
            </TextBlock>
            <CheckBox Grid.Row="6"
                      Grid.Column="2"
                      Style="{StaticResource TopCheckBox}"
                      IsChecked="{Binding AutoInsertFavoriteTargetFolderCollectionItems, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   MaxWidth="200">                    
                    <Run Text="Maxmale Einträge in der"/>                    
                    <LineBreak/>                    
                    <Run Text="Favoritenliste"/>
            </TextBlock>
            <TextBox Grid.Row="7"
                     Grid.Column="2"
                     Name="MAXFAVTARGETFOLDERITEMS_TEXTBOX"
                     Style="{StaticResource TopTextBox}"
                     MaxLength="2"
                     Width="50" 
                     HorizontalAlignment="Left">
                <TextBox.Text>
                    <Binding Path="MaxFavoriteTargetFolderCollectionItems" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue="10"
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckIntLessThan16ValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <Button Grid.Row="9"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    Content="Einstellungen speichern"
                    Padding="15,5"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=Cmd_SaveConfig}">

                <Button.Style>
                    <Style TargetType="{x:Type Button}">

                        <Setter Property="IsEnabled" Value="false"/>

                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>

                                    <Condition Binding="{Binding ElementName=STARTPATH_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=MAXFAVTARGETFOLDERITEMS_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>

                                </MultiDataTrigger.Conditions>

                                <Setter Property="IsEnabled" Value="true" />

                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Grid>
</Window>
