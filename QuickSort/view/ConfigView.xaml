<Window x:Class="QuickSort.View.ConfigView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickSort.View"
        xmlns:vr="clr-namespace:QuickSort.ValidationRules"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="en"
        lex:ResxLocalizationProvider.DefaultAssembly="QuickSort"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        mc:Ignorable="d"
        Title="{lex:Loc tbConfig_WindowTitle}"
        Height="500" 
        Width="650" 
        Icon="/icloud-logo-49272-Windows.ico" 
        ResizeMode="CanMinimize">

    <Grid>

        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Style="{StaticResource ConfigView_HeadLine}"
                   Name="tbConfig_Title1"
                   Content="{lex:Loc}"/>

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Name="tbConfig_StartPath"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <TextBox Grid.Row="1"
                     Grid.Column="2"                    
                     Name="STARTPATH_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox}">
                <TextBox.Text>
                    <Binding Path="StartPath" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='C:\'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <vr:CheckPathExistsValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Grid.Row="1"
                    Grid.Column="4"
                    Style="{StaticResource ConfigView_Button}"
                    Name="btnConfig_Browse"
                    Content="{lex:Loc}"
                    Command="{Binding Path=Cmd_BrowseStartFolder}"/>

            <Label Grid.Row="2" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Name="tbConfig_Title2"
                   Content="{lex:Loc}"                   
                   Style="{StaticResource ConfigView_HeadLine}"/>

            <Label Grid.Row="3"
                   Grid.Column="0"
                   Name="tbConfig_UseDarkModeColorTheme"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <CheckBox Grid.Row="3"
                      Grid.Column="2"
                      Style="{StaticResource ConfigView_CheckBox}"
                      IsChecked="{Binding UseDarkModeColorTheme, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="4"
                   Grid.Column="0"
                   Name="tbConfig_Language"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <ComboBox Grid.Row="4"
                      Grid.Column="2"                      
                      SelectedIndex="{Binding Language, FallbackValue=0}"
                      Style="{StaticResource ConfigView_ComboBox}">
                <ComboBoxItem Content="{lex:Loc cbConfig_LanguageDefault}"/>
                <ComboBoxItem Content="{lex:Loc cbConfig_LanguageGerman}"/>
                <ComboBoxItem Content="{lex:Loc cbConfig_LanguageEnglish}"/>
            </ComboBox>

            <Label Grid.Row="5" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Name="tbConfig_Title3"
                   Content="{lex:Loc}"                   
                   Style="{StaticResource ConfigView_HeadLine}"/>

            <TextBlock Grid.Row="6"
                       Grid.Column="0"
                       MaxWidth="200"
                       TextWrapping="Wrap"
                       Name="tbConfig_ShowMoveDlg"
                       Text="{lex:Loc}"
                       Style="{StaticResource ConfigView_TextBlock_Top}"/>
            <CheckBox Grid.Row="6"
                      Grid.Column="2"
                      Style="{StaticResource ConfigView_CheckBox_Top}"
                      IsChecked="{Binding ShowMoveDlg, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="7"
                   Grid.Column="0"
                   Name="tbConfig_ShowImgFileName"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <CheckBox Grid.Row="7"
                      Grid.Column="2"
                      Style="{StaticResource ConfigView_CheckBox}"
                      IsChecked="{Binding ShowImgFileName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="8"
                       Grid.Column="0"
                       MaxWidth="200"
                       TextWrapping="Wrap"
                       Name="tbConfig_AutoInsertFavoriteTargetFolderCollectionItems"
                       Text="{lex:Loc}"
                       Style="{StaticResource ConfigView_TextBlock_Top}"/>
            <CheckBox Grid.Row="8"
                      Grid.Column="2"
                      Style="{StaticResource ConfigView_CheckBox_Top}"
                      IsChecked="{Binding AutoInsertFavoriteTargetFolderCollectionItems, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="9"
                       Grid.Column="0"
                       MaxWidth="200"
                       TextWrapping="Wrap"
                       Name="tbConfig_MaxFavoriteTargetFolderCollectionItems"
                       Text="{lex:Loc}"
                       Style="{StaticResource ConfigView_TextBlock_Top}"/>
            <TextBox Grid.Row="9"
                     Grid.Column="2"
                     Name="MAXFAVTARGETFOLDERITEMS_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox_Top}"
                     MaxLength="2"
                     Width="50" 
                     HorizontalAlignment="Left">
                <TextBox.Text>
                    <Binding Path="MaxFavoriteTargetFolderCollectionItems" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue="10"
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <vr:CheckIntValidationRule ValidatesOnTargetUpdated="True"
                                                                   MinValue="0"
                                                                   MaxValue="16"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <Button Grid.Row="11"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    Padding="15,5"
                    Height="30"
                    HorizontalAlignment="Right"                    
                    Name="btnConfig_SaveConfig"
                    Content="{lex:Loc}"
                    Command="{Binding Path=Cmd_SaveConfig}">

                <Button.Style>
                    <Style TargetType="{x:Type Button}"
                           BasedOn="{StaticResource ConfigView_Button}">

                        <Setter Property="IsEnabled" Value="false"/>

                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>

                                    <Condition Binding="{Binding ElementName=STARTPATH_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=MAXFAVTARGETFOLDERITEMS_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>

                                </MultiDataTrigger.Conditions>

                                <Setter Property="IsEnabled" Value="true" />

                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Grid>
</Window>
