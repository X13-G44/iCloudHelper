                                Tag="&#xE10A;"
                                Content="Abbrechen"
                                Command="{Binding Cmd_Dlg_AbortStartFileMoveProcess}"/>

                    </Grid>

                </StackPanel>

                <!--<Border.Effect>
                <DropShadowEffect ShadowDepth="0"                                                 
                                      BlurRadius="10"                                                                                       
                                      Color="WhiteSmoke"/>
            </Border.Effect>-->

            </Border>

        </Grid>

        <!-- Overlay Dlg: Ask for new folder name dialog -->
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.ColumnSpan="2"
              Background="#EF1B1D1F"
              Visibility="{Binding DialogOverlay_NewDirectoryName_Show, Converter={StaticResource BoolToVis}, FallbackValue=Hidden}">

            <Border BorderThickness="2"
                BorderBrush="{DynamicResource DialogBorderBrushColor}"
                Background="{DynamicResource DialogBackgroundColor}"                
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MinWidth="20"
                MinHeight="20"
                Padding="15" 
                SnapsToDevicePixels="True">

                <StackPanel Orientation="Horizontal">

                    <TextBlock Grid.Column="1"
                       Grid.Row="1"
                       Text="❔"
                       VerticalAlignment="Center"
                       FontSize="92"
                       Foreground="{DynamicResource DialogBtnSymbolColor}"/>

                    <Grid Margin="20,0,0,0">
                        <Grid.RowDefinitions>
                            <!--Top distance -->
                            <RowDefinition Height="*"/>
                            <!--Titel-->
                            <RowDefinition Height="Auto"/>
                            <!--Top distance-->
                            <RowDefinition Height="15"/>
                            <!--Message Text-->
                            <RowDefinition Height="Auto"/>
                            <!--Top distance-->
                            <RowDefinition Height="25"/>
                            <!--Buttons-->
                            <RowDefinition Height="Auto"/>
                            <!--Bottom distance -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="1"
                           Text="Frage"
                           FontSize="20" 
                           Foreground="{DynamicResource DialogBtnSymbolColor}"
                           FontWeight="Bold"/>

                        <StackPanel Grid.Row="3">

                            <TextBlock MinWidth="300"
                                       MaxWidth="500"
                                       Foreground="{DynamicResource DialogTitleTextForegroundColor}"
                                       TextWrapping="Wrap">
                            
                                <Run Text="Neuer Ordnername:"/>
                                <LineBreak/>

                            </TextBlock>

                            <TextBox Height="25">
                                <TextBox.Resources>
                                    <validate_rules:BindingProxy x:Key="proxy" Data="{Binding}"/>
                                </TextBox.Resources>

                                <TextBox.Text>
                                    <Binding Path="DialogOverlay_NewDirectoryName_Name" 
                                             FallbackValue="New Directory Name"
                                             UpdateSourceTrigger="PropertyChanged"
                                             ValidatesOnDataErrors="True" 
                                             ValidatesOnExceptions="True">
                                        <Binding.ValidationRules>
                                            <validate_rules:CheckDirectoryNameValidationRule ValidatesOnTargetUpdated="True">
                                                <validate_rules:CheckDirectoryNameValidationRule.Wrapper>

                                                    <validate_rules:CheckDirectoryNameValidationRuleWrapper RootDirectory="{Binding Data.DialogOverly_NewDirectoryRootPath, Source={StaticResource proxy}}"/>

                                                </validate_rules:CheckDirectoryNameValidationRule.Wrapper>
                                            </validate_rules:CheckDirectoryNameValidationRule>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>

                        </StackPanel>

                        <Button Grid.Row="5"
                            HorizontalAlignment="Left"
                            Style="{StaticResource DialogboxButtonStyle}" 
                            Tag="&#xE10B;"
                            Content="Übernehmen"
                            Command="{Binding Cmd_Dlg_NewDirectoryNameAccept}"/>

                        <Button Grid.Row="5"
                            HorizontalAlignment="Right"
                            Style="{StaticResource DialogboxButtonStyle}" 
                            Tag="&#xE10A;"
                            Content="Abbrechen"
                            Command="{Binding Cmd_Dlg_NewDirectoryNameAbort}"/>

                    </Grid>

                </StackPanel>

                <!--<Border.Effect>
                    <DropShadowEffect ShadowDepth="0"                                                 
                        BlurRadius="10"                                                                                       
                        Color="WhiteSmoke"/>
                </Border.Effect>-->

            </Border>

        </Grid>

    </Grid>
</Window>
