<Window x:Class="AutoUnzip.view.ConfigView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUnzip"
        xmlns:validate_rules="clr-namespace:AutoUnzip.validationrules"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="en"
        lex:ResxLocalizationProvider.DefaultAssembly="AutoUnzip"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        mc:Ignorable="d"
        Title="{lex:Loc tbConfig_WindowTitle}"
        Height="650" 
        Width="650" 
        Icon="/icloud-logo-49272-Windows.ico" 
        ResizeMode="CanMinimize">

    <Grid>
        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Name="tbConfig_Title1"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_HeadLine}"/>

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Name="tbConfig_WatchPath"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <TextBox Grid.Row="1"
                     Grid.Column="2"
                     Name="WATCHPATH_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox}">
                <TextBox.Text>
                    <Binding Path="WatchPath" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='C:\'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckPathExistsValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Grid.Row="1"
                    Grid.Column="4"
                    Style="{StaticResource ConfigView_Button}"
                    Content="{lex:Loc btnConfig_Browse}"
                    Command="{Binding Path=Cmd_BrowseWatchPath}"/>

            <Label Grid.Row="2"
                   Grid.Column="0"
                   Name="tbConfig_FilenameToSearch"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <TextBox Grid.Row="2"
                     Grid.Column="2"
                     Name="FILENAMETOSEARCH_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox}">
                <TextBox.Text>
                    <Binding Path="FilenameToSearch" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='iCloud*.zip'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckFileFilterValidationRule ValidatesOnTargetUpdated="True"
                                                                          AllowStarChar="true"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       MaxWidth="200"
                       TextWrapping="Wrap"
                       Name="tbConfig_ExtractPath"
                       Text="{lex:Loc}"
                       Style="{StaticResource ConfigView_TextBlock_Top}"/>
            <TextBox Grid.Row="3"
                     Grid.Column="2"
                     Name="EXTRACTPATH_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox_Top}">
                <TextBox.Text>
                    <Binding Path="ExtractPath" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='C:\'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckPathExistsValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Grid.Row="3"
                    Grid.Column="4"
                    Style="{StaticResource ConfigView_Button}"
                    Content="{lex:Loc btnConfig_Browse}"
                    Command="{Binding Path=Cmd_BrowseExtractPath}"/>

            <Label Grid.Row="4"
                   Grid.Column="0"
                   Name="tbConfig_TempFolderPrefix"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <TextBox Grid.Row="4"
                     Grid.Column="2"
                     Name="TEMPFOLDERPREFIX_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox}">
                <TextBox.Text>
                    <Binding Path="TempFolderPrefix" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='iCloud_'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckDirPrefixValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <Label Grid.Row="5" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Name="tbConfig_Title2"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_HeadLine}"/>

            <Label Grid.Row="6"
                   Grid.Column="0"
                   Name="tbConfig_BackupPath"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <TextBox Grid.Row="6"
                     Grid.Column="2"
                     Name="BACKUPPATH_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox}">
                <TextBox.Text>
                    <Binding Path="BackupPath" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='C:\'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckPathExistsValidationRule ValidatesOnTargetUpdated="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Grid.Row="6"
                    Grid.Column="4"
                    Style="{StaticResource ConfigView_Button}"
                    Content="{lex:Loc btnConfig_Browse}"
                    Command="{Binding Path=Cmd_BrowseBackupPath}"/>

            <Label Grid.Row="7"
                   Grid.Column="0"
                   Name="tbConfig_BackupRetentionPeriod"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <TextBox Grid.Row="7"
                     Grid.Column="2"
                     Name="BACKUPRETENTIONPERIOD_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox}">
                <TextBox.Text>
                    <Binding Path="BackupRetentionPeriod" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='90'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckIntValidationRule ValidatesOnTargetUpdated="True"
                                                                   MinValue="0"
                                                                   MaxValue="366"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <Label Grid.Row="8" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Name="tbConfig_Title3"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_HeadLine}"/>

            <Label Grid.Row="9"
                   Grid.Column="0"
                   Name="tbConfig_UseDarkModeColorTheme"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <CheckBox Grid.Row="9"
                      Grid.Column="2"
                      Style="{StaticResource ConfigView_CheckBox}"
                      IsChecked="{Binding UseDarkModeColorTheme, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="10"
                   Grid.Column="0"
                   Name="tbConfig_Language"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_Label}"/>
            <ComboBox Grid.Row="10"
                      Grid.Column="2"
                      SelectedIndex="{Binding Language, FallbackValue=0}"
                      Style="{StaticResource ConfigView_ComboBox}">
                <ComboBoxItem Content="{lex:Loc cbConfig_LanguageDefault}"/>
                <ComboBoxItem Content="{lex:Loc cbConfig_LanguageGerman}"/>
                <ComboBoxItem Content="{lex:Loc cbConfig_LanguageEnglish}"/>
            </ComboBox>

            <Label Grid.Row="11" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="6"
                   Name="tbConfig_Title4"
                   Content="{lex:Loc}"
                   Style="{StaticResource ConfigView_HeadLine}"/>

            <Label Grid.Row="12"
                   Grid.Column="0"
                   Content="QuickSort App"
                   Style="{StaticResource ConfigView_Label}"/>
            <TextBox Grid.Row="12"
                     Grid.Column="2"
                     Name="QUICKSORTAPP_TEXTBOX"
                     Style="{StaticResource ConfigView_TextBox}">
                <TextBox.Text>
                    <Binding Path="QuickSortApp" 
                             UpdateSourceTrigger="PropertyChanged"
                             FallbackValue='C:\windows\explorer.exe'
                             ValidatesOnDataErrors="True" 
                             ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <validate_rules:CheckFileExistsValidationRule ValidatesOnTargetUpdated="True"
                                                                          IgnoreFileExtension="false"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Grid.Row="12"
                    Grid.Column="4"
                    Style="{StaticResource ConfigView_Button}"
                    Content="{lex:Loc btnConfig_Browse}"
                    Command="{Binding Path=Cmd_BrowseQuickSortApp}"/>

            <Button Grid.Row="14"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    Padding="15,5"
                    Height="30"
                    HorizontalAlignment="Right"                    
                    Name="btnConfig_SaveConfig"
                    Content="{lex:Loc}"
                    Command="{Binding Path=Cmd_SaveConfig}">

                <Button.Style>
                    <Style TargetType="{x:Type Button}"
                           BasedOn="{StaticResource ConfigView_Button}">

                        <Setter Property="IsEnabled" Value="false"/>

                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>

                                    <Condition Binding="{Binding ElementName=WATCHPATH_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=FILENAMETOSEARCH_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=EXTRACTPATH_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=TEMPFOLDERPREFIX_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=BACKUPPATH_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=BACKUPRETENTIONPERIOD_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>
                                    <Condition Binding="{Binding ElementName=QUICKSORTAPP_TEXTBOX, Path=(Validation.HasError)}" Value="False"/>

                                </MultiDataTrigger.Conditions>

                                <Setter Property="IsEnabled" Value="true" />

                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Grid>
</Window>
