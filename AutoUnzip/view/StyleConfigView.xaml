<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Headline Styles-->
    <Style x:Key="ConfigView_HeadLine" TargetType="Label">
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,15,0,0"/>
    </Style>

    <!--Text Styles-->
    <Style x:Key="ConfigView_Label" TargetType="Label">
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0"/>
    </Style>

    <Style x:Key="ConfigView_TextBlock_Top" TargetType="TextBlock">
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="15,2"/>
    </Style>

    <!--TextBox Styles-->
    <Style x:Key="ConfigView_TextBox" TargetType="TextBox">
        <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
        <!--<Setter Property="BorderThickness" Value="1"/>-->
        <Setter Property="Background" Value="#FFF0F0F0"/>
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="3"/>

        <Setter Property="Validation.ErrorTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0"
                                    Grid.Column="0"
                                    BorderBrush="{DynamicResource CommonErrorColor}" 
                                    BorderThickness="2">
                            <AdornedElementPlaceholder x:Name="placeholder"/>
                        </Border>

                        <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="{DynamicResource CommonErrorColor}"
                                       Margin="0,2,0,0"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Top"
                                       FontWeight="DemiBold"
                                       Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">
                        </TextBlock>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource CommonErrorColor}"/>
                <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ConfigView_TextBox_Top" TargetType="TextBox">
        <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
        <!--<Setter Property="BorderThickness" Value="1"/>-->
        <Setter Property="Background" Value="#FFF0F0F0"/>
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="3"/>

        <Setter Property="Validation.ErrorTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0"
                                    Grid.Column="0"
                                    BorderBrush="{DynamicResource CommonErrorColor}" 
                                    BorderThickness="2">
                            <AdornedElementPlaceholder x:Name="placeholder"/>
                        </Border>

                        <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="{DynamicResource CommonErrorColor}"
                                       Margin="0,2,0,0"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Top"
                                       FontWeight="DemiBold"
                                       Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">
                        </TextBlock>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource CommonErrorColor}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--Checkbox Styles-->
    <Style x:Key="ConfigView_CheckBox" TargetType="CheckBox">
        <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
        <!--<Setter Property="BorderThickness" Value="1"/>-->
        <Setter Property="Background" Value="#FFF0F0F0"/>
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="3"/>
    </Style>

    <Style x:Key="ConfigView_CheckBox_Top" TargetType="CheckBox">
        <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
        <!--<Setter Property="BorderThickness" Value="1"/>-->
        <Setter Property="Background" Value="#FFF0F0F0"/>
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="3"/>
    </Style>

    <!--Button Styles-->
    <Style x:Key="ConfigView_Button" TargetType="Button">
        <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#FFF0F0F0"/>
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <!--<Setter Property="FontSize" Value="14"/>-->
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="Height" Value="25"/>
    </Style>

    <!--ComboBox Styles-->
    <Style x:Key="ConfigView_ComboBox" TargetType="ComboBox">
        <Setter Property="BorderBrush" Value="#FF6D6D6D"/>
        <!--<Setter Property="BorderThickness" Value="1"/>-->
        <Setter Property="Background" Value="#FFF0F0F0"/>
        <Setter Property="Foreground" Value="#FF3C3C3C"/>
        <!--<Setter Property="FontSize" Value="14"/>-->
        <!--<Setter Property="FontWeight" Value="Normal"/>-->
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

</ResourceDictionary>