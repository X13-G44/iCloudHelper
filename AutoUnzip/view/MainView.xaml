<Window x:Class="AutoUnzip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUnzip"
        xmlns:help="clr-namespace:AutoUnzip.help"
        mc:Ignorable="d"
        Title="iCloudHelper" 
        Height="150" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"         
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False" 
        Icon="/icloud-logo-49272-Windows.ico">

    <Window.Resources>

        <Style x:Key="MainView_Button" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType ="Button">

                        <Border Background="{DynamicResource CommonBackgroundColor}"
                                BorderBrush="{DynamicResource CommonBorderBrushColor}"
                                BorderThickness="4"
                                CornerRadius="15">

                            <StackPanel Margin="10"
                                Orientation="Vertical">

                                <TextBlock Foreground="{DynamicResource CommonForegroundColor}" 
                                           FontSize="20"
                                           Text="{TemplateBinding Content}"/>

                                <ItemsControl ItemsSource="{TemplateBinding Tag}"
                                              Margin="0,10,0,0">

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <Image Source="{Binding}" 
                                                       Width="64" Height="64" 
                                                       Stretch="UniformToFill" 
                                                       Margin="0,0,10,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>

                                </ItemsControl>

                            </StackPanel>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.Triggers>

        <EventTrigger RoutedEvent="Window.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard help:StoryboardHelper.CompletedCommand="{Binding Path=Cmd_FadeAnimationEnded}">

                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0.1" 
                                         To="1.0" 
                                         Duration="0:0:1.5"/>

                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         BeginTime="0:0:15"
                                         From="1.0" 
                                         To="0.0" 
                                         Duration="0:0:1.5"/>

                    </Storyboard>

                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>

    </Window.Triggers>

    <Button Grid.Row="0"
            Style="{StaticResource MainView_Button}"
            Content="{Binding ExtractedFileText, FallbackValue='99 iCloud Bilder extrahiert.'}"
            Tag="{Binding ExtractedFilesPreview, UpdateSourceTrigger=PropertyChanged}"
            Command="{Binding Cmd_RunQuickSortApp}"/>

</Window>
