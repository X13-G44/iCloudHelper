<Window x:Class="AutoUnzip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUnzip"
        xmlns:help="clr-namespace:AutoUnzip.help"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="en"
        lex:ResxLocalizationProvider.DefaultAssembly="AutoUnzip"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"        
        mc:Ignorable="d"
        Title="iCloudHelper" 
        Height="170" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"         
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False" 
        Icon="/icloud-logo-49272-Windows.ico">

    <Window.Resources>

        <Style x:Key="MainView_Button" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType ="Button">

                        <Border Background="{DynamicResource CommonBackgroundColor}"
                                BorderBrush="{DynamicResource CommonBorderBrushColor}"
                                BorderThickness="4"
                                CornerRadius="15">

                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Foreground="{DynamicResource CommonForegroundColor}" 
                                           FontSize="20"
                                           Text="{TemplateBinding Content}"/>

                                <Rectangle Grid.Row="1"
                                           Height="1"
                                           Fill="{DynamicResource VirtualDirectorySeperatorColor}"
                                           Margin="0,5,0,5"/>

                                <ItemsControl Grid.Row="2"
                                              ItemsSource="{TemplateBinding Tag}"
                                              HorizontalAlignment="Center">

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Padding="2"
                                                        Margin="1"
                                                        Background="{DynamicResource CommonBorderBrushColor}">
                                                
                                                    <Image Source="{Binding}" 
                                                           Width="64" 
                                                           Height="64" 
                                                           Stretch="UniformToFill"/>

                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>

                                </ItemsControl>

                                <Rectangle Grid.Row="3"
                                           Height="1"
                                           Fill="{DynamicResource VirtualDirectorySeperatorColor}"
                                           Margin="0,5,0,5"/>

                                <TextBlock Grid.Row="4"
                                           Foreground="{DynamicResource CommonForegroundColor}"                                           
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Text="{lex:Loc tbMain_StartQuickSort}"/>

                            </Grid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.Triggers>

        <EventTrigger RoutedEvent="Window.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    
                    <Storyboard help:StoryboardHelper.CompletedCommand="{Binding Path=Cmd_FadeAnimationEnded}">

                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0.1" 
                                         To="1.0" 
                                         Duration="0:0:1.5"/>

                        <!--<DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         BeginTime="0:0:15"
                                         From="1.0" 
                                         To="0.0" 
                                         Duration="0:0:1.5"/>-->

                    </Storyboard>

                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>

    </Window.Triggers>

    <Button Grid.Row="0"
            Style="{StaticResource MainView_Button}"
            Content="{Binding ExtractedFileText, FallbackValue='99 iCloud Bilder extrahiert.'}"
            Tag="{Binding ExtractedFilesPreview, UpdateSourceTrigger=PropertyChanged}"
            Command="{Binding Cmd_RunQuickSortApp}"/>

</Window>
